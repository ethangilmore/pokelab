        "preview:web": "npm run preview --workspace pokelab-web"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.0",
        "@types/express": "^5.0.6",
        "@types/node": "^24.0.3",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitejs/plugin-react": "^4.4.1",
        "autoprefixer": "^10.4.17",
        "eslint": "^9.25.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^16.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.35",
        "tailwindcss": "^4.1.13",
        "tsx": "^4.21.0",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.30.1",
        "vite": "^6.3.5"
