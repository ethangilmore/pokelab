{
    "name": "pokelab",
    "private": true,
    "version": "0.0.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev:web": "npm run dev --workspace pokelab-web",
        "dev:api": "npm run dev --workspace pokelab-api",
